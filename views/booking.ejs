<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Booking</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container py-5">
    <h2 class="text-center mb-4">üìù Make a Booking</h2>

    <!-- Booking Form -->
    <div class="card shadow-sm mb-5">
      <div class="card-body">
        <form action="/booking" method="POST">
          <div class="row g-3">
            <div class="col-md-4">
              <label class="form-label">Select Customer</label>
              <select class="form-select" name="customerId" required>
                <option disabled selected value="">Choose...</option>
                <% customers.forEach(c => { %>
                  <option value="<%= c[0] %>"><%= c[1] %> (<%= c[2] %>)</option>
                <% }) %>
              </select>
            </div>

            <div class="col-md-4">
              <label class="form-label">Select Product</label>
              <select class="form-select" name="productId" required>
                <option disabled selected value="">Choose...</option>
                <% products.forEach(p => { %>
                  <option value="<%= p[0] %>"><%= p[1] %></option>
                <% }) %>
              </select>
            </div>

            <div class="col-md-4">
              <label class="form-label">Quantity</label>
              <input type="number" name="qty" class="form-control" min="1" required>
            </div>
          </div>

          <div class="text-center mt-4">
            <button class="btn btn-primary px-4">Book Now</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Booking History Table -->
    <div class="card shadow-sm">
      <div class="card-body">
        <h4 class="mb-3 text-secondary">üìñ Recent Bookings</h4>

        <div class="table-responsive">
          <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Product</th>
                <th>Image</th>
                <th>Qty</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% bookings.forEach(b => { %>
                <tr>
                  <td><%= b.id %></td>
                  <td><%= b.customerName %></td>
                  <td><%= b.productName %></td>
                  <td>
                    <% if (b.productImage) { %>
                      <img src="<%= b.productImage %>" alt="Product" style="max-width: 60px;" class="img-thumbnail">
                    <% } else { %>
                      N/A
                    <% } %>
                  </td>
                  <td><%= b.qty %></td>
                  <td><%= b.date.toLocaleString() %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="text-center mt-4">
      <a href="/menu" class="btn btn-secondary">‚Üê Back to Menu</a>
    </div>
  </div>

</body>
</html>
